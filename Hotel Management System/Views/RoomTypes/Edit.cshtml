@model Hotel_Management_System.Models.RoomType

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RoomType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="d-none form-group">
                <label asp-for="RoomImg" class="control-label"></label>
                <input asp-for="RoomImg" class="form-control" accept="image/png, image/jpg, image/jpeg, image/webp" value="@Model.RoomImgUrl" />
                <span asp-validation-for="RoomImg" class="text-danger"></span>
            </div>
            <div class="d-none form-group">
                <label asp-for="RoomImgUrl" class="control-label"></label>
                <input asp-for="RoomImgUrl" class="form-control" value="@Model.RoomImgUrl" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
